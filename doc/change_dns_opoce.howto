/var/cfengine/master/SYSTEM_FILES/dns
domain opoce.cec.eu.int
#nameserver      10.135.43.10
#nameserver      10.135.43.20
nameserver 158.167.99.8
nameserver 158.167.99.7
search opoce.cec.eu.int publications.win


